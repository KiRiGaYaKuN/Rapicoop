<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".carritodecompras"
    android:background="#F9F2ED">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listadeproductos"
        android:layout_width="match_parent"
        android:layout_height="385dp"
        android:layout_margin="5dp"
        android:layout_marginTop="32dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="4dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Carrito de compras"
        android:textColor="#3AB0FF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="80dp"
        android:layout_height="74dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:srcCompat="@drawable/carrito_de_supermercado"
        tools:layout_editor_absoluteX="165dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/mensajecarrito"
        android:layout_width="340dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:text="En este momento no tienes ningun producto en el carrito..."
        android:textAlignment="center"
        android:textColor="#887B7B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        tools:layout_editor_absoluteX="35dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        android:layout_width="148dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_rounded"
        android:text="Ir a ofertas"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/mensajecarrito"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="131dp" />

</androidx.constraintlayout.widget.ConstraintLayout>